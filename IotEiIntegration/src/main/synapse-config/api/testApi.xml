<?xml version="1.0" encoding="UTF-8"?>
<api context="/testapi" name="testApi" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET">
        <inSequence>
            <log>
                <property name="test" value="test"/>
            </log>
            <property name="emailSubject" scope="default" type="STRING" value="Test Email Subject"/>
            <property name="toAddress" scope="default" type="STRING" value="pumudu88@gmail.com"/>
            <xslt key="conf:iotResources/email-template.xslt"/>
            <call-template target="SGCH-SharedResources-Email-Template">
                <with-param name="subject" value="{$ctx:emailSubject}"/>
                <with-param name="toAddress" value="{$ctx:toAddress}"/>
            </call-template>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
</api>
